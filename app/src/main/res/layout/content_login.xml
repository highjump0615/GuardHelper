<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.highjump.guardhelper.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_title_margin_top"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:text="海淀分局警卫勤务" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_logo_margin_top"
        android:src="@drawable/home_logo" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_edit_margin_top"
        android:layout_marginLeft="@dimen/login_edit_margin_hori"
        android:layout_marginRight="@dimen/login_edit_margin_hori"
        android:hint="请输入警号"
        android:inputType="textPersonName|textNoSuggestions"
        android:lines="1"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_edit_margin_vert"
        android:layout_marginLeft="@dimen/login_edit_margin_hori"
        android:layout_marginRight="@dimen/login_edit_margin_hori"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:lines="1"/>

    <Button
        android:id="@+id/but_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_but_height"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/login_edit_margin_hori"
        android:layout_marginRight="@dimen/login_edit_margin_hori"
        android:text="登 录"
        android:textSize="@dimen/login_but_text_size" />

</LinearLayout>
